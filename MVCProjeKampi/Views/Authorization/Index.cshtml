@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Durum</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>

            <td>@x.AdminID</td>
            <td>@x.AdminUserName</td>
            <td>@x.AdminRole</td>
            <td>Aktif</td>
            <td><a href="/AdminCategory/DeleteCategory/@x.AdminID" class="btn btn-outline-danger">Pasif Yap</a></td>
            <td><a href="/Authorization/EditAdmin/@x.AdminID" class="btn btn-outline-warning">Yetkisini Değiştir</a></td>
        </tr>
    }
</table>

<br />
<a href="/Authorization/AddAdmin/" class="btn btn-outline-info">Yeni Admin Tanımla</a>

